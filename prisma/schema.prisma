// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum RequestStatus {
  Pending
  Accepted
  Rejected
}

model users {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique
  email     String   @unique
  username  String   @unique
  password  String
  isEmailVerified Boolean?
  accessToken String?
  refreshToken String?
  isDeleted Boolean?
  lastLogin DateTime?
}

model profiles {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  profileId String @unique
  userId    String @unique
  signature String?
  location  String?
  phoneNumber String?
  status    String?
  avatarUrl String?
  coverImageUrl String?
  name String?
  contactIds String[]
}

model requests {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  requestId String @unique
  requestedBy String
  requesting String
  createdAt DateTime
  status RequestStatus @default(Pending)
}
